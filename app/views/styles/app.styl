@font-face
	font-family 'VT323'
	src url('/fonts/VT323.woff') format('woff')
	font-weight normal
	font-style normal

 @font-face
	font-family 'commodore'
	src url('/fonts/commodore.woff') format('woff'), url('/fonts/commodore.ttf') format('truetype')


@font-face 
	font-family 'Pricedown'
	src: url('../fonts/pricedown_bl-webfont.eot') format('eot'),
		url('../fonts/pricedown_bl-webfont.woff') format('woff'),
		url('../fonts/pricedown_bl-webfont.ttf') format('truetype'),
		url('../fonts/pricedown_bl-webfont.svg') format('svg')
	font-weight normal
	font-style normal

html, body
	height 100%
	margin 0
	padding 0

body > div:first-child 
	height 100%

.container
	width 100%
	padding 0

#home
	display table
	width 100%
	height 100%
	padding 0

	background #f00
	background -webkit-linear-gradient(69deg, #4c6f95 0%, #0e192b 60%)
	background linear-gradient(21deg, #4c6f95 0%, #0e192b 60%)

	h1
		font-family 'commodore'
		font-weight bold
		text-shadow 2px 2px 0px #333
		color white
		
	p.lead
		font-family 'commodore'
		text-shadow 2px 2px 0px #333
		text-align left
		margin 2em -2em
		color white

	button
		font-family 'commodore'
		line-height 1.5em

	.row
		height 100%
		display table-cell
		vertical-align middle

	.key
		display inline-block
		min-width 40px
		height 40px
		font-size 24px
		line-height 40px
		color #333
		padding 0px 5px
		margin 1px
		text-align center
		vertical-align bottom
		border 1px solid #aaa
		border-radius 5px

#stage
	position fixed
	width 100%
	height 100%
